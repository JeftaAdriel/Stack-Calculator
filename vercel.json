{
    "version": 2,
    "builds": [
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        },
        {
            "src": "api/calculate.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/calculate",
            "dest": "api/calculate.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}